<%- include('./partials/head') %>
<body>
  <section style="background-color: #eee;">
    <div class="container py-5">
      <div class="row">
        <div class="col-12 mb-2">
          <form name="frm" method="POST" action="/logout">
            <button type="submit" class="btn btn-danger flex-fill ms-1">Logout</button>
        </form>
        </div>
        <div class="col-12">
          <div class="d-flex flex-row">
          <button type="button" class="btn btn-primary flex-fill me-1" data-mdb-ripple-color="dark">
            <h3>Sudents Details</h3>
          </button>
          </div>
        </div>
      </div>
      <div class="row">

        <% student_details.forEach((val)=>{ %>
        <div class="col-md-12 col-lg-3 mb-4 mb-lg-0">
          <div class="card text-black">
            <img src="./images/<%= val.pic %>"
              class="card-img-top" alt="iPhone" />
            <div class="card-body">
              <div class="text-center mt-1">
                <h4 class="card-title"><%= val.name %></h4>
                <h6 class="text-primary mb-1 pb-3"><%= val.course %></h6>
              </div>
              <div class="text-center">
                <div class="p-3 mx-n3 mb-4" style="background-color: #eff1f2;">
                  <h5 class="mb-0">Batch-<%= val.batch %></h5>
                </div>
                <div class="d-flex flex-column mb-4">
                  <span class="h1 mb-0">
                    <i class="fas fa-camera-retro"></i>
                  </span>
                  <ul class="list-unstyled mb-0">
                    <li aria-hidden="true">—</li>
                    <li>PH : <%= val.ph1 %></li>
                    <li>Guardian PH : <%= val.ph2 %></li>
                    <li aria-hidden="true">—</li>
                  </ul>
                </div>
              </div>
              <div class="d-flex flex-row">
                <button type="button" class="btn btn-primary flex-fill me-1" data-mdb-ripple-color="dark">
                  View Address
                </button>
                <button type="button" class="btn btn-danger flex-fill ms-1">View Mark</button>
              </div>
            </div>
          </div>
        </div>
          <% }) %>
       
      </div>
    </div>
  </section>
</body>
</html>


